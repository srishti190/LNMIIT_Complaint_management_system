<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ComplaintSystem</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>com.ComplaintSystem.Controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ComplaintController</servlet-name>
    <servlet-class>com.ComplaintSystem.Controller.ComplaintController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ComplaintController</servlet-name>
    <url-pattern>/Complaint</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ComplaintListener</servlet-name>
    <servlet-class>com.ComplaintSystem.Controller.ComplaintListener</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ComplaintListener</servlet-name>
    <url-pattern>/submitcomplaint</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminController</servlet-name>
    <servlet-class>com.ComplaintSystem.Controller.AdminController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminController</servlet-name>
    <url-pattern>/adminlogin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminComplaintController</servlet-name>
    <servlet-class>com.ComplaintSystem.Controller.AdminComplaintController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminComplaintController</servlet-name>
    <url-pattern>/filescomplaint</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DepartmentController</servlet-name>
    <servlet-class>com.ComplaintSystem.Controller.DepartmentController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DepartmentController</servlet-name>
    <url-pattern>/department</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ReportGenerateController</servlet-name>
    <servlet-class>com.ComplaintSystem.Controller.ReportGenerateController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReportGenerateController</servlet-name>
    <url-pattern>/report</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogoutController</servlet-name>
    <servlet-class>com.ComplaintSystem.Controller.LogoutController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutController</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ResolvedReportController</servlet-name>
    <servlet-class>com.ComplaintSystem.Controller.ResolvedReportController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ResolvedReportController</servlet-name>
    <url-pattern>/Resolved</url-pattern>
  </servlet-mapping>
</web-app>